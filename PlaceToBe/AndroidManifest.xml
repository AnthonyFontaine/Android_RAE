<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rae.placetobe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_place_to_be"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name=".data.PlaceToBeContentProvider"
            android:authorities="com.rea.placetobe.provider"
            android:exported="false" />

        <!-- TODO :  android:process, android:syncable -->

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.Android_RAE.PlaceToBe.MainActivity" />
        </activity>
        <activity
            android:name=".PublicationActivity"
            android:label="@string/title_activity_publication_activty" />
        <activity
            android:name=".history.HistoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_history" />
        <activity android:name=".account.AccountFragment" />
        <activity
            android:name=".account.TabsActivity"
            android:label="@string/title_activity_tab" />
        <activity android:name=".account.FollowedFragment" />
        <activity android:name=".account.FollowersFragment" />
        <activity
            android:name=".AbstractDrawerActivity"
            android:label="@string/title_activity_drawer" />
        <activity
            android:name=".account.AddFollowedActivity"
            android:label="@string/title_activity_add_followed" />
        <activity
            android:name=".debug.UsersDebugActivity"
            android:label="@string/title_activity_users_debug" >
        </activity>
        <activity
            android:name="com.rae.placetobe.debug.ImagesDebugActivity"
            android:label="@string/title_activity_images_debug" >
        </activity>
        <activity
            android:name=".SearchUserActivity"
            android:label="Search user Activity" >
        </activity>
    </application>

</manifest>
